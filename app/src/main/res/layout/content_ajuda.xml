<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ajuda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ajuda"
    android:background="#ECEFF1"

    tools:showIn="@layout/activity_ajuda">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Vaga"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:textAlignment="center"
                android:id="@+id/txt_vaga"
                android:textSize="18sp" />

            <TextView
                android:text="O Botão Vaga Irá Moestar todas as vagas disponíveis em tempo real"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:textAlignment="inherit"
                android:id="@+id/txtVagaEsplicaçao"
                android:textSize="14sp" />

            <TextView
                android:text="Estacionar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:id="@+id/txtEstacionar"
                android:textSize="18sp" />
            <TextView
                android:text="Com o botão estaciona você será capaz de de guardar o número da vaga em que se encontra utilizando a leitura de um QRcode.O Usuário deverá selecionar a opção de estacionar e escanear o QRCode."
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:textAlignment="inherit"
                android:id="@+id/txtEstacionaEsplicaçao"
                android:textSize="14sp" />
            <TextView
                android:text="Procurar Vaga"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:id="@+id/txtProcurarVaga"
                android:textSize="18sp" />
            <TextView
                android:text="Com o botão Procurar Vaga você poderá ver seu carro na vaga estacionada com um Pin como sinalizador."
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textAlignment="inherit"
                android:id="@+id/txtProcurarVagaEsplicaçao"
                android:textSize="14sp" />

            <TextView
                android:text="Ajuda Técnica"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:id="@+id/txtAjudaTecnica"
                android:textSize="18sp" />

            <TextView
                android:text="Com o botão Ajuda Técnica você poderá pedir por ajuda em caso de problemas técnicos com seu veículo, o pedido de poderá ser cancelado a qualquer momento."
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textAlignment="inherit"
                android:id="@+id/txtAjudaTecnicaEsplicaçao"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>